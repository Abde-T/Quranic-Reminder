{
  "manifest_version": 3,
  "name": "Quranic Reminder",
  "version": "0.0.1",
  "description": "Shows random Quranic verses based on user-defined frequency.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "permissions": ["storage", "alarms", "notifications"],
  "background": {
    "service_worker": "background.js"
  }
}
